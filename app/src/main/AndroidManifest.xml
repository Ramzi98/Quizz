<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.quizz">

    <application
        android:allowBackup="true"
        android:icon="@drawable/quizz_logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        <activity android:name=".Controller.Activity.Home">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Controller.Activity.QuestionsManagement"
            android:parentActivityName=".Controller.Activity.Partie"/>
        <activity
            android:name=".Controller.Activity.AddQuestion" />
        <activity
            android:name=".Controller.Activity.DisplayAnswer" />
        <activity
            android:name=".Controller.Activity.Partie" />
        <activity
            android:name=".Controller.Activity.QuizzChoosed" />
        <activity
            android:name=".Controller.Activity.QuizzsGestion" />
        <activity
            android:name=".Controller.Activity.QuizzsList" />
        <activity
            android:name=".Controller.Activity.DisplayAllQuizzs" />
        <activity
            android:name=".Controller.Activity.DisplayScore" />
        <activity
            android:name=".Controller.Activity.DisplayScoresOfQuizz" />
        <activity
            android:name=".Controller.Activity.ModifyQuestion" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>
    <uses-permission android:name="android.permission.INTERNET"></uses-permission>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

</manifest>