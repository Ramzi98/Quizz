<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#7E009688">
    <TextView
        android:layout_marginTop="40dp"
        android:id="@+id/txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Les scores du Quizz "
        android:textColor="#000000"
        android:textSize="24sp"
        android:textStyle="bold"
        android:background="@drawable/button_shape4"
        android:layout_alignParentTop="true"
        android:gravity="center"/>
    <TextView
        android:id="@+id/quizz_type_display"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Informatique"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold"
        android:background="@drawable/button_shape4"
        android:gravity="center"
        android:layout_below="@+id/txt"
        android:layout_marginBottom="20dp"
        />
    <androidx.recyclerview.widget.RecyclerView
        android:layout_below="@id/quizz_type_display"
        android:id="@+id/recyclerView_scores"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp">

    </androidx.recyclerview.widget.RecyclerView>

</RelativeLayout>